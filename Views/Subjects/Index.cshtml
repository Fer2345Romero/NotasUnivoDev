@model List<SubjectsModel>
<div class="container">
	<div class="row">
		<div class="col-xl-12 col-md-12 col-sm-12 d-flex justify-content-start">
			<a type="button" class="btn btn-primary" asp-action="UpSert" asp-controller="Subjects"><i class="bi bi-plus-circle"></i> Agregar</a>
		</div>
		<div class="col-xl-12 col-md-12 col-ms-12 mt-3">
			<table class="table table-hover" id="SubjectsTable">
				<thead>
					<tr>
						<th>Actions</th>
						<th>Id</th>
						<th>Subject Name</th>
						<th>VU/th>
						<th>IsActive</th>
					</tr>
				</thead>
				<tbody>
					@{
						@foreach (SubjectsModel subject in Model)
						{
							<tr>
								<td>
									<a type="button" class="btn btn-success" asp-action="View" asp-controller="Subjects" asp-route-id="@subject.SubjectId">
										<i class="bi bi-eye-fill"></i>
									</a>
									<a type="button" class="btn btn-warning" asp-action="UpSert" asp-controller="Subjects" asp-route-id="@subject.SubjectId">
										<i class="bi bi-pencil-square"></i>
									</a>
									<a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Subjects" asp-route-id="@subject.SubjectId">
										<i class="bi bi-trash-fill"></i>
									</a>
								</td>
								<td>@subject.SubjectId</td>
								<td>@subject.SubjectName</td>
								<td>@subject.VU</td>
								<td>
									@if (subject.IsActive)
									{
										<span class="badge bg-success">Activo</span>
									}
									else
									{
										<span class="badge bg-danger">Inactivo</span>
									}
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#SubjectsTable').DataTable();
		});
	</script>
}
